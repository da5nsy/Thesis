	journal = {Vision Research},
	author = {Gloriani, Alejandro H. and Matesanz, Beatriz M. and Barrionuevo, Pablo A. and Arranz, Isabel and Issolio, Luis and Mar, Santiago and Aparicio, Juan A.},
