	journal = {Current Biology},
	author = {Zaidi, Farhan H. and Hull, Joseph T. and Peirson, Stuart N. and Wulff, Katharina and Aeschbach, Daniel and Gooley, Joshua J. and Brainard, George C. and Gregory-Evans, Kevin and Rizzo III, Joseph F. and Czeisler, Charles A. and Foster, Russell G. and Moseley, Merrick J. and Lockley, Steven W.},
